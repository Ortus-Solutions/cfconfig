  <!-- =========================================================== -->
  <!-- extra options                                               -->
  <!-- =========================================================== -->
  <!-- Stops the server when ctrl+c is pressed (registers to Runtime.addShutdownHook)-->
  <Set name="stopAtShutdown">true</Set>
  <!-- allows requests(prior to shutdown) to finish gracefully -->
  <Set name="stopTimeout">100</Set>
